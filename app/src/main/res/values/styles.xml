<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SeparatedTextView">
        <item name="android:padding">?attr/listPreferredItemPaddingLeft</item>
        <item name="android:textAppearance">?attr/textAppearanceListItem</item>
        <item name="android:linksClickable">true</item>
        <item name="android:autoLink">web</item>
    </style>

    <style name="VerticalListScroll">
        <item name="android:fillViewport">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:overScrollMode">ifContentScrolls</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:paddingLeft">@dimen/list_default_side_margin</item>
        <item name="android:paddingRight">@dimen/list_default_side_margin</item>
    </style>

    <style name="VerticalListRecycler" parent="VerticalListScroll" />
</resources>
